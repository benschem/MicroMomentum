<%# HABIT CONTAINER %>
<li class= "
  <%= habit.done_today ? 'bg-green-300 border-green-400' : 'bg-gray-50 border-gray-200' %>
   border-2 backdrop-opacity-0 drop-shadow-md rounded-xl mx-5 mt-3 mb-0 overflow-hidden grid grid-cols-1">

  <%# INFO CONTAINER %>
  <div class="flex justify-between h-8">

    <%# STREAK OR GAP %>
    <p class="flex-none mt-2 ml-5 text-xl text-slate-800">
      <%= habit.done_yesterday ? "🔥 #{habit.current_streak}" : "🚫 #{habit.current_gap}" %>
    </p>

    <%# NAME %>
    <h3 class="grow self-end px-3 truncate text-center text-md text-slate-800 font-medium tracking-wide "><%= habit.name %></h3>

    <%# RECORD %>
    <p class="flex-none mt-3 mr-5 text-slate-800"><%= habit.longest_streak %> 🏆</p>
  </div>

  <%# PROGRESS BAR CONTAINER%>
  <div class="row-start-2 h-3 <%= habit.done_today ? 'bg-gray-50' : 'bg-gray-200' %> rounded-full mx-4 my-2 w-auto">

    <%# PROGRESS BAR %>
    <div class=" h-full rounded-full <%= (habit.progress == 100) ? 'bg-orange-400' : 'bg-green-600' %>" style="width: <%= habit.progress %>%">
    </div>
  </div>

  <%# VIEW HABIT LINK %>
  <div class="hidden">
    <%= link_to "View Habit", habit_path(habit), class: "text-zinc-500 border border-zinc-500 hover:bg-zinc-500 hover:text-white active:bg-zinc-600 font-bold uppercase text-xs px-4 py-2 rounded outline-none focus:outline-none mr-1 mb-1 ease-linear transition-all duration-150", type: "button" %>
  </div>
</li>

<div class="flex justify-center">
  <div class="grow mt-8 flex justify-between max-w-sm">
    <%= link_to "<", :back, class: "mt-2 text-slate-500 dark:slate-100 border border-slate-500 dark:slate-100 hover:bg-slate-500 hover:dark:bg-slate-100 hover:text-slate-50 hover:dark:text-slate-600 active:bg-slate-600 font-bold uppercase text-xs px-4 py-2 rounded outline-none focus:outline-none mr-1 mb-1 ease-linear transition-all duration-150", type: "button" %>

    <h1 class="text-center text-3xl font-bold text-slate-800 dark:text-slate-50">
    Daily Habits
    </h1>

    <%= link_to "+", new_habit_path, class: "mt-2 text-slate-500 dark:slate-100 border border-slate-500 dark:slate-100 hover:bg-slate-500 hover:dark:bg-slate-100 hover:text-slate-50 hover:dark:text-slate-600 active:bg-slate-600 font-bold uppercase text-xs px-4 py-2 rounded outline-none focus:outline-none mr-1 mb-1 ease-linear transition-all duration-150", type: "button" %>
  </div>
</div>

<div class="flex justify-center">
  <ul class="mb-10">
    <% @habits.each do |habit| %>
      <%= render "single_habit", habit: habit %>
    <% end %>
  </ul>
</div>
